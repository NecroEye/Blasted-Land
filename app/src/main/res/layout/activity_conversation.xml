<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Conversation">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:orientation="horizontal"
            android:background="@drawable/border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="5dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                app:srcCompat="@drawable/card" />

            <TextView
                android:id="@+id/Reincarnation"
                android:layout_width="4dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:background="@drawable/borderdiff"
                android:fontFamily="@font/header"
                android:gravity="center"
                android:paddingTop="1dp"
                android:text="= 0" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="1dp"
                android:layout_height="26dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                app:srcCompat="@drawable/key" />

            <TextView
                android:id="@+id/Key"
                android:layout_width="4dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:background="@drawable/borderdiff"
                android:fontFamily="@font/header"
                android:paddingTop="4dp"
                android:text="X0" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="1dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                app:srcCompat="@drawable/refine" />

            <TextView
                android:id="@+id/Anvil"
                android:layout_width="5dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:background="@drawable/borderdiff"
                android:fontFamily="@font/header"
                android:gravity="center"
                android:paddingTop="1dp"
                android:text="X0" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="10dp"
                android:layout_height="26dp"
                android:paddingBottom="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/money" />

            <TextView
                android:id="@+id/money"
                android:layout_width="5dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:background="@drawable/borderdiff"
                android:fontFamily="@font/header"
                android:gravity="center"
                android:paddingTop="1dp"
                android:text="= 0" />

            <ImageView
                android:id="@+id/HealthImg"
                android:layout_width="5dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                app:srcCompat="@drawable/phase3" />

            <TextView
                android:id="@+id/health"
                android:layout_width="5dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:fontFamily="@font/header"
                android:gravity="center"
                android:text="= 20" />
        </LinearLayout>

        <TextView
            android:id="@+id/npcName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/jack"
            android:layout_marginTop="5dp"
            android:text="Assasin" />

        <ImageView
            android:id="@+id/npc"
            android:layout_width="match_parent"
            android:layout_height="239dp"
            android:layout_marginVertical="15dp"
            app:srcCompat="@drawable/assasin" />

        <TextView
            android:id="@+id/npcText"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/textborder"
            android:fontFamily="@font/punk"
            android:gravity="center"

            android:text="so a new face, welcome "
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/topborder"
            android:textSize="20dp"
            android:text="unknow person (you)"
            android:paddingTop="5dp"
            android:fontFamily="@font/jack"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="263dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="318dp"
                android:layout_height="237dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/unswordman" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="238dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button3"
                    android:fontFamily="@font/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#7b7b7b"
                    android:background="@drawable/buttons"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:text="Button" />

                <Button
                    android:id="@+id/button4"
                    android:fontFamily="@font/header"
                    android:layout_width="match_parent"
                    android:backgroundTint="#7b7b7b"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttons"
                    android:layout_marginHorizontal="10dp"
                    android:text="Button" />

                <Button
                    android:id="@+id/button5"
                    android:fontFamily="@font/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#7b7b7b"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/buttons"
                    android:text="Button" />

                <Button
                    android:id="@+id/button6"
                    android:fontFamily="@font/header"
                    android:backgroundTint="#7b7b7b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttons"
                    android:layout_marginHorizontal="10dp"
                    android:text="Button" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/topborder"
            android:paddingTop="5dp"
            android:fontFamily="@font/header"
            android:text="Right now you are at"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tavern" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>