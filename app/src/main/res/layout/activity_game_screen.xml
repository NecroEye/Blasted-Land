<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#474945"
    tools:context=".GameScreen">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:orientation="horizontal"
            android:background="@drawable/border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="5dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                app:srcCompat="@drawable/card" />

            <TextView
                android:id="@+id/Reincarnation"
                android:layout_width="4dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:background="@drawable/borderdiff"
                android:fontFamily="@font/header"
                android:gravity="center"
                android:paddingTop="1dp"
                android:text="= 0" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="1dp"
                android:layout_height="26dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                app:srcCompat="@drawable/key" />

            <TextView
                android:id="@+id/Key"
                android:layout_width="4dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:background="@drawable/borderdiff"
                android:fontFamily="@font/header"
                android:paddingTop="4dp"
                android:text="X0" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="1dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                app:srcCompat="@drawable/refine" />

            <TextView
                android:id="@+id/Anvil"
                android:layout_width="5dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:background="@drawable/borderdiff"
                android:fontFamily="@font/header"
                android:gravity="center"
                android:paddingTop="1dp"
                android:text="X0" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="5dp"
                android:layout_height="26dp"
                android:paddingBottom="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/money" />

            <TextView
                android:id="@+id/money"
                android:layout_width="5dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:background="@drawable/borderdiff"
                android:fontFamily="@font/header"
                android:gravity="center"
                android:paddingTop="1dp"
                android:text="= 0" />

            <ImageView
                android:id="@+id/HealthImg"
                android:layout_width="5dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                app:srcCompat="@drawable/phase3" />

            <TextView
                android:id="@+id/health"
                android:layout_width="5dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:fontFamily="@font/header"
                android:gravity="center"
                android:text="= 20" />
        </LinearLayout>

        <ImageView
            android:id="@+id/gameImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="10"
            app:srcCompat="@drawable/map" />

        <TextView
            android:id="@+id/gameTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:fontFamily="@font/header"
            android:gravity="center"
            android:text="Burası Hikâyenin başladığı nokta"
            android:textColor="#F6F6F6"
            android:textSize="20sp" />

        <Button
            android:id="@+id/choiceButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="30dp"
            android:fadingEdge="vertical"
            android:textSize="18sp"
            android:background="@drawable/buttons"
            android:fontFamily="@font/header"
            android:onClick="button1"
            android:text="Button" />

        <Button
            android:id="@+id/choiceButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:background="@drawable/buttons"
            android:fadingEdge="vertical"
            android:fontFamily="@font/header"
            android:onClick="button2"
             android:text="Button" />

        <Button
            android:id="@+id/choiceButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:background="@drawable/buttons"
            android:fadingEdge="vertical"
            android:fontFamily="@font/header"
            android:onClick="button3"
            android:text="Button" />

        <Button
            android:id="@+id/choiceButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginVertical="30dp"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"
            android:fadingEdge="vertical"
            android:background="@drawable/buttons"
            android:fontFamily="@font/header"
            android:onClick="button4"
            android:text="Button" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>